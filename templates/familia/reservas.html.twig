{% extends 'base.html.twig' %}

{% block title %}Hello FamiliaController!{% endblock %}

{% block body %}

	<h1>Reservas</h1>
	<ul>
		{% if citas is empty %}
			No se han encontrado reservas
		{% else %}
			<ul>
				{% for cita in citas %}
						{% if username == cita.User.username %}
							<il>
								{{ cita.fecha |date('Y-m-d')}}
								{{ cita.hora |date('H:i:s')}}
								<a href="/anular/{{cita.Reserva.id}}">Anular</a>
							</il>
							<br>
						{% endif %}
				{% endfor %}
			</ul>
			</br>
    		<a class="btn btn-primary" href="/familia/{{servicio}}">Volver a {{servicio}}</a> 
		{% endif %}
{% endblock %}
